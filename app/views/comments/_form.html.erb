<%# NOTE COMMENT Conditionally load an AJAX version of the form when on `posts#show`. %>
<% if params[:controller] === 'posts' %>
    <%# NOTE COMMENT Assign the form an ID of `comments-form` so that you can select the form when using javascript in `app/views/comments/create.js.erb`. %>
    <%# NOTE COMMENT Don't add `local: true` to this form. Otherwise, AJAX will not work. %>
    <%= form_with model:[@post, @comment], id: "comments-form" do |f| %>
        <%= render 'comments/form-fields', f: f %>
    <% end  %>
<% else  %>
    <%= form_with model:[@post, @comment], local: true do |f| %>
        <%= render "shared/validation-messages", object: f.object %>
        <%= render 'comments/form-fields', f: f %>
    <% end  %>
<% end  %>


